@model Egharpay.Models.LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = null;
   
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mumbile | Login</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Fonts/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/Content/animate.css" rel="stylesheet">
    <link href="~/Content/css/Site.css" rel="stylesheet">
</head>

<body class="top-navigation body-background">
    <div id="page-top" class="navbar-wrapper landing-page">
        <nav class="navbar navbar-fixed-top" role="navigation">
            <div class="navbar-header">
                @*<button aria-controls="navbar" aria-expanded="false" data-target="#navbar" data-toggle="collapse" class="navbar-toggle collapsed" type="button">
                    <i class="fa fa-reorder"></i>
                </button>*@
                <div class="row">
                    <div class="col-lg-2">
                        <a href="~/Home" class="navbar-brand"><strong>mumbile</strong></a>
                    </div>
                </div>
            </div>
        </nav>
    </div>
<div class="loginColumns animated fadeInDown">
    <div class="row">
        <div class="col-md-6" id="login">
            <h2 class="font-bold">Welcome to mumbile</h2>
            <p>
                Mumbile is designed by prajapati technologies pvt ltd.A start up for repairing mobile services online.
            </p>
            <p>
                Buy phone from seller near by you and get delivered within an hour. 
            </p>
            <p>
                Mumbile is not going share your data with anyone.We consider you have accepted the @Html.ActionLink("Privacy policy","PrivacyPolicy","Home"), once you register your account with mumbile.  
            </p>

            <p>
                <small>Mumbile....</small>
            </p>

        </div>
        <div class="col-md-6">
            <div class="ibox-content">
                @using (Html.BeginForm("Login", "Account", new {ReturnUrl = ViewBag.ReturnUrl}, FormMethod.Post, new {@class = "m-t", role = "form"}))
                {
                    @Html.AntiForgeryToken()
                    if (ViewContext.ViewData.ModelState.Any(x => x.Key == ""))
                    {
                        <div class="form-group alert alert-danger">
                            @Html.ValidationSummary(false, null, new { @class = "" })
                        </div>
                    }
                    <h1>Login</h1>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.UserName, new {@class = "form-control", @placeholder = "Email or Mobile Number"})
                        @Html.ValidationMessageFor(m => m.UserName, "", new {@class = "text-danger"})
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(m => m.Password, new {@class = "form-control", @placeholder = "Password"})
                        @Html.ValidationMessageFor(m => m.Password, "", new {@class = "text-danger"})
                    </div>
                    <button type="submit" class="btn btn-primary block full-width m-b">Submit</button>
                    @Html.ActionLink("Lost your password?", "ResetPassword", "Account", null, new {@class = "reset_pass"})
                    <p class="text-muted text-center">
                        <small>Do not have an account?</small>
                    </p>
                    @Html.ActionLink("Create an account", "Register", "Account", null, new {@class = "btn btn-sm btn-danger btn-block"})
                }
                <p class="m-t">
                    <small>Mumbile believe in rendering service.</small>
                </p>
            </div>
        </div>
    </div>
    <hr/>
    <div class="row">
        <div class="col-md-6">
            Copyright Prajapati Technologies Pvt Ltd
        </div>
        <div class="col-md-6 text-right">
            <small>© 2017-2018</small>
        </div>
    </div>
</div>

</body>
</html>

@Scripts.Render("~/Scripts/bower")
@Scripts.Render("~/Scripts/Application")


