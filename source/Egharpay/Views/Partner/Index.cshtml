@using Egharpay.Business.Extensions

@{
    var layout = User.IsSuperUser() ? "~/Views/Shared/_Layout.cshtml" : "~/Views/Shared/_Layout_2.cshtml";
    Layout = layout;
    ViewBag.Title = "Partner";
}

<div ng-cloak ng-controller="MobileRepairController as model" ng-init="model.retrievePartners()">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Sellers </h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-sm-5 m-b-xs">
                            <div class="row m-b-sm m-t-sm">
                                <div class="col-md-6 form-inline">
                                    @Html.Partial("Pagination/_pageSize")
                                </div>
                                <div class="col-md-6">
                                    @Html.Partial("Pagination/_pageInformation")
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-3 m-b-xs">
                        </div>
                        <div class="col-sm-4">
                            @*<div class="input-group">
                                <input type="text" placeholder="Search" class="input-sm form-control" ng-model="searchField" ng-keyup="$event.keyCode == 13 && model.searchSeller(searchField)"> <span class="input-group-btn">
                                    <button type="button" class="btn btn-sm btn-primary" ng-click="model.searchSeller(searchField)"> Go!</button>
                                </span>
                            </div>*@
                        </div>
                    </div>


                </div>
            </div>
        </div>

    </div>

    <div class="row" ng-if="model.partners.length>0">
        <div class="col-xs-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <div class="table-responsive">
                        <table class="table table-responsive table-bordered table-hover dataTables-example dataTable responsive">
                            <thead>
                                <tr role="row">
                                    <th ng-click="model.order('Name')" ng-class="model.orderClass('Name')">Name</th>
                                    <th ng-click="model.order('Mobile')" ng-class="model.orderClass('Mobile')">Mobile</th>
                                    <th ng-click="model.order('EmailId')" ng-class="model.orderClass('Owner')">Email Id</th>
                                    <th ng-click="model.order('Comment')" ng-class="model.orderClass('Address1')">Comment</th>
                                    <th ng-click="model.order('CreatedDate')" ng-class="model.orderClass('CreatedDate')">Created Date</th>
                                    <th ng-click="model.order('FollowupDate')" ng-class="model.orderClass('FollowupDate')">Follow up Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="partner in model.partners" class="odd gradeX" ng-click="$event.originalEvent.ngClickHandled || model.editpartner(partner.PartnerId)">
                                    <td><span ng-bind="partner.Name"></span></td>
                                    <td><span ng-bind="partner.Mobile"></span></td>
                                    <td><span ng-bind="partner.EmailId"></span></td>
                                    <td><span ng-bind="partner.Comment"></span></td>
                                    <td><span ng-bind="partner.CreatedDate|date:'dd MMM yyyy'"></span></td>
                                    <td><span ng-bind="partner.FollowupDate|date:'dd MMM yyyy'"></span></td>
                                    <td>
                                        <div class="btn-group pull-right">
                                            <a class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown" aria-expanded="false" ng-click="$event.originalEvent.ngClickHandled = true">
                                                <i class="fa fa-chevron-down"></i>
                                            </a>
                                            <ul class="dropdown-menu slidedown">
                                                <li>
                                                    <a href="/Partner/{{partner.PartnerId}}/Edit">
                                                        Edit
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    @Html.Partial("Pagination/_pagination")
                </div>
            </div>
        </div>
    </div>

    <div class="row" ng-if="model.partners.length<=0">
        <div class="col-xs-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <label ng-bind="model.searchMessage"></label>
                </div>
            </div>
        </div>
    </div>
</div>