@using Egharpay.Extensions;
@{
    var layout = User.IsSuperUserOrAdminOrSeller() ? "~/Views/Shared/_Layout.cshtml" : "~/Views/Shared/_Layout_2.cshtml";
    Layout = layout;
    ViewBag.Title = "Brands";
}
<br />
<div ng-controller="BrandController as model" ng-init="model.initialise()" ng-show="model.brands.length > 0">
    <div class="row">
        <div class="col-lg-12">
            <h3>
                Brands
            </h3>
        </div>
    </div>
    <br />
    <div class="ibox-content-brand-search">
        <div class="row m-b-sm m-t-sm">
            <div class="col-md-4">
                <div class="input-group">
                    <input type="text" placeholder="Search brand.." class="input-sm form-control" ng-model="searchField" ng-keyup="$event.keyCode == 13 && model.searchBrand(searchField)"> <span class="input-group-btn">
                        <button type="button" class="btn btn-sm btn-primary" ng-click="model.searchBrand(searchField)"> Go!</button>
                    </span>
                </div>
            </div>
            <div class="col-md-4">
                <label class="btn btn-w-m btn-warning">
                    <input id="checkboxTopBrand" type="checkbox" autocomplete="off" class="ng-pristine ng-untouched ng-valid ng-empty" ng-click="model.retrieveTopSellingBrands()">
                    Top Selling Brands.
                </label>
            </div>
            <div class="project-list">
            </div>
        </div>
        <div class="row m-b-sm m-t-sm">
            <div class="col-md-3 form-inline">
                @*@Html.Partial("Pagination/_pageSize")*@
            </div>
            <div class="col-md-9 text-right">
                @*@Html.Partial("Pagination/_pageInformation")*@
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-lg-3">
            @*@Html.Partial("_PersonnelHomeSelfie")*@
            <div>
                <div class="ibox float-e-margins">
                    <div class="ibox-content-image-static">
                        <div>
                            <div class="carousel-inner">
                                <div class="item active">
                                    <a href="@Url.Action("Detail", "Mobile", new { id = 12159})">
                                        <img alt="image" class="img-responsive" src="~/Images/gallery/Vivo V9 Youth.jpeg">
                                        <div class="carousel-caption">
                                            <p>Vivo V9 Youth</p>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="ibox float-e-margins">
                    <div class="ibox-content-image-static">
                        <div>
                            <div class="carousel-inner">
                                <div class="item active">
                                    <a href="@Url.Action("Detail", "Mobile", new { id = 12160})">
                                        <img alt="image" class="img-responsive" src="~/Images/gallery/Samsung Galaxy S9.jpg">
                                        <div class="carousel-caption">
                                            <p>Samsung Galaxy S9</p>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="ibox float-e-margins">
                    <div class="ibox-content-image-static">
                        <div>
                            <div class="carousel-inner">
                                <div class="item active">
                                    <a href="@Url.Action("Detail", "Mobile", new { id = 12154})">
                                        <img alt="image" class="img-responsive" src="~/Images/gallery/Nokia 6.1 (Nokia 6 2018).jpg">
                                        <div class="carousel-caption">
                                            <p>Nokia 6</p>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="ibox float-e-margins">
                    <div class="ibox-content-image-static">
                        <div>
                            <div class="carousel-inner">
                                <div class="item active">
                                    <a href="@Url.Action("Detail", "Mobile", new { id = 12150})">
                                        <img alt="image" class="img-responsive" src="~/Images/gallery/Xiaomi Redmi Note 5.jpeg">
                                        <div class="carousel-caption">
                                            <p>Xiaomi Redmi Note 5</p>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-9" ng-cloak>
            <div class="col-md-3" ng-repeat="brand in model.brands">
                <button class="btn btn-default dim btn-brand" ng-click="model.brandMobileLocation(brand.BrandId,brand.Name)">
                    <div class="row">
                        <div class="col-lg-12">
                            <img class="img-brand" ng-src="{{brand.ImagePath}}" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12"><span class="brand-name" ng-bind="brand.Name"></span></div>
                    </div>
                </button>
            </div>
        </div>
    </div>
</div>
