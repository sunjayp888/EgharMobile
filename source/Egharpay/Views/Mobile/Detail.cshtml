@using Egharpay.Extensions
@model Egharpay.Models.MobileViewModel
@{
    var layout = User.IsSuperUserOrAdminOrSeller() ? "~/Views/Shared/_Layout.cshtml" : "~/Views/Shared/_Layout_2.cshtml";
    Layout = layout;
    ViewBag.Title = @Model.MobileName;
}

<div ng-controller="MobileController as model" ng-init="model.detailMobile(@Model.MobileId)">
    <div class="row wrapper border-bottom white-bg page-heading ">
        <div class="col-lg-10">
            <br />
            <ol class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index", "Home")">Home</a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Mobile")">Mobile</a>
                </li>
                <li class="active">
                    <strong><span ng-bind="model.mobiles.Name"></span></strong>
                </li>
            </ol>
        </div>
        <div class="col-lg-2">
        </div>
    </div>
    <div class="wrapper wrapper-content">
        <div class="row animated fadeInRight">
            <div class="col-md-4">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h1><span ng-bind="model.mobiles.Name"></span></h1>
                    </div>
                    <div>
                        <div class="ibox-content border-left-right">
                            @*<img alt="image" class="img-responsive img-center" src="{{model.mobiles.ProfileImagePath}}" data-zoom-image="~/MobileImage/Acer/Acer Allegro/Acer-Allegro_2.jpg">*@
                            @*<img src="{{model.mobiles.ProfileImagePath}}"
                                wip-image-zoom="vm.options"
                                selected-model="vm.selected"
                                selected-index="vm.selectedIndex">*@
                            <img class="img-responsive img-center"  src="{{model.mobiles.ProfileImagePath}}">
                        </div>

                        <div class="ibox-content profile-content">
                            <div class="row m-t-lg">
                                <div class="col-md-4 col-xs-4">
                                    <button class="btn btn-default dim btn-large-dim" type="button"><i class="fa fa-camera"></i></button>
                                    <p>
                                        <h4>
                                            <strong><span ng-bind="model.mobiles.PrimaryCamera==null ? 'N/A' : model.mobiles.PrimaryCamera + ' MP'"></span></strong>
                                        </h4>
                                        <h4>
                                            <strong><span ng-bind="model.mobiles.SecondaryCamera==null ? 'N/A' : model.mobiles.SecondaryCamera + ' MP'"></span></strong>
                                        </h4>
                                    </p>
                                </div>
                                <div class="col-md-4 col-xs-4">
                                    <button class="btn btn-default dim btn-large-dim" type="button"><i class="fa fa-microchip"></i></button>
                                    <p><h4><strong><span ng-bind="model.mobiles.RAM==null ? 'N/A' : model.mobiles.RAM + ' GB'"></span></strong></h4></p>
                                </div>
                                <div class="col-md-4 col-xs-4">
                                    <button class="btn btn-default dim btn-large-dim" type="button"><i class="fa fa-mobile"></i></button>
                                    <p><h4><strong><span ng-bind="model.mobiles.DisplayResolution==null ? 'N/A' : model.mobiles.DisplayResolution"></span></strong></h4></p>
                                </div>
                            </div>
                            <div class="row m-t-lg">
                                <div class="col-md-4 col-xs-4">
                                    <button class="btn btn-default dim btn-large-dim" type="button"><i class="fa fa-floppy-o"></i></button>
                                    <p><h4><strong><span ng-bind="model.mobiles.InternalMemory==null ? 'N/A' : model.mobiles.InternalMemory"></span></strong></h4></p>
                                </div>
                                <div class="col-md-4 col-xs-4">
                                    <button class="btn btn-default dim btn-large-dim" type="button"><i class="fa fa-cogs"></i></button>
                                    <p>
                                        <h4><strong><span ng-bind="model.mobiles.Chipset==null ? 'N/A' : model.mobiles.Chipset"></span></strong></h4>
                                        <h4><strong><span ng-bind="model.mobiles.Cpu==null ? 'N/A' : model.mobiles.Cpu"></span></strong></h4>
                                    </p>
                                </div>
                                <div class="col-md-4 col-xs-4">
                                    <button class="btn btn-default dim btn-large-dim" type="button"><i class="fa fa-battery"></i></button>
                                    <p>
                                        <h4>
                                            <strong><span ng-bind="model.mobiles.BatterySize"></span> mAh</strong>
                                        </h4>
                                        <h4>
                                            <strong><span ng-bind="model.mobiles.BatteryType"></span> Battery</strong>
                                        </h4>
                                    </p>
                                </div>
                            </div>
                            <h4><span ng-bind="model.mobiles.Name"></span></h4>
                            <p>
                                <i class="fa fa-briefcase"></i><strong> <span ng-bind="model.mobiles.ReleasedDate"></span></strong>
                            </p>
                            <p>
                                <i class="fa fa-android"></i><strong> <span ng-bind="model.mobiles.OS"></span></strong>
                            </p>
                            <p>
                                <i class="fa fa-android"></i><strong> <span ng-bind="model.mobiles.BodyDimension"></span></strong>
                            </p>
                            <p>
                                <i class="fa fa-briefcase"></i><strong> <span ng-bind="model.mobiles.Storage"></span></strong>
                            </p>

                            @*<div class="user-button">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <button type="button" class="btn btn-primary btn-lg btn-block"><i class="fa fa-envelope"></i> Request to buy</button>
                                        </div>
                                        <div class="col-md-6">
                                            <button type="button" class="btn btn-primary btn-lg btn-block"><i class="fa fa-mobile"></i> Compare</button>
                                        </div>
                                    </div>
                                </div>*@
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="tabs-container">
                    <ul class="nav nav-tabs">
                        <li class="active"><a data-toggle="tab" href="#tab-1"><strong> Description</strong></a></li>
                        @*<li class=""><a data-toggle="tab" href="#tab-2"><strong> Gallery</strong></a></li>*@
                        <li class=""><a data-toggle="tab" href="#tab-3"><strong> Video</strong></a></li>
                        <li class=""><a data-toggle="tab" href="#tab-4"><strong> Reviews</strong></a></li>
                        @if (!User.IsSuperUserOrAdminOrSeller())
                        {
                            <li class=""><button ng-click="model.sellerMobileOrder()" class="btn btn-request-buy" data-toggle="tab" href="#tab-5"><strong> Request to seller</strong></button></li>
                            <li class="" id="compareButton"><button class="btn btn-compare" ng-click="model.compareMobile('@Model.BrandId','@Model.MobileId')"><strong> Compare</strong></button></li>
                        }

                        @*<li class=""><button class="btn btn-compare" data-toggle="modal" data-target="#compareModal"><strong> Compare</strong></button></li>*@
                        @if (User.IsSuperUserOrAdminOrSeller())
                        {
                            <li class=""><button class="btn btn-compare" data-toggle="tab" href="#tab-7"><strong> Add to store</strong></button></li>
                        }
                    </ul>
                    <div class="tab-content">
                        @Html.Partial("_Detail")
                        @*@Html.Partial("_Gallery")*@
                        @Html.Partial("_Video")
                        @Html.Partial("_Review")
                        @Html.Partial("_Seller")
                        @Html.Partial("_AddToStore")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>

        var checkBoxes = $('tbody .myCheckBox');
        $('tbody .myCheckBox').change(function () {
            $('#btnRequestSeller').prop('disabled', checkBoxes.filter(':checked').length < 1);
        });
        //$('tbody .myCheckBox').change();
    </script>
}



