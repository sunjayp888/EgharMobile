@using Egharpay.Extensions
@model Egharpay.Models.MobileViewModel
@{
    var layout = User.IsSuperUserOrAdminOrSeller() ? "~/Views/Shared/_Layout.cshtml" : "~/Views/Shared/_Layout_2.cshtml";
    Layout = layout;
    ViewBag.Title = "Compare";
}

<h2>Compare</h2>
<div ng-cloak class="wrapper wrapper-content animated fadeInRight" ng-controller="MobileCompareController as model" ng-init="model.intialise(@Model.BrandId,@Model.MobileId)">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5 class="text-center">Select phone and compare (Maximum 3 phone.)</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="bootstrap-tagsinput">
                                <ui-select multiple class="form-control" ng-model="model.selectedBrands" on-select="model.onBrandSelect()" on-remove="model.onBrandRemove()" close-on-select="true" title="Select brands...">
                                    <ui-select-match placeholder="Choose brand"><span ng-bind="$item.Name"></span></ui-select-match>
                                    <ui-select-choices repeat="brand.BrandId as brand in model.brands | filter:$select.search">
                                        <h4 ng-bind-html="brand.Name | highlight: $select.search"></h4>
                                    </ui-select-choices>
                                </ui-select>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="bootstrap-tagsinput">
                                <ui-select multiple class="form-control" ng-model="model.selectedMobiles" on-select="model.onMobileSelect()" on-remove="model.onMobileRemove()" close-on-select="true" title="Select products...">
                                    <ui-select-match placeholder="Choose phone"><span ng-bind="$item.Name"></span></ui-select-match>
                                    <ui-select-choices repeat="mobile.MobileId as mobile in model.mobiles | filter:$select.search">
                                        <div class="row">
                                            <div class="col-lg-2">
                                                <img class="compare-mobile-image" src="{{mobile.ProfileImagePath}}" />
                                            </div>
                                            <div>
                                                <h4 class="ui-select-h5" ng-bind-html="mobile.Name | highlight: $select.search"></h4>
                                            </div>
                                        </div>
                                    </ui-select-choices>
                                </ui-select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
