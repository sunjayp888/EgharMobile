@model Egharpay.Models.MobileViewModel
<div id="tab-4" class="tab-pane xs-mt-10" ng-controller="MobileCommentController as model" ng-init="model.retrieveMobileCommentsByMobileId(@Model.MobileId)">
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox chat-view">
                    <div class="ibox-content">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="chat-discussion">
                                    <div ng-repeat="mobileComment in model.mobileComments">
                                        <div ng-if="mobileComment.Approve">
                                            <div ng-class-odd="'chat-message left'" ng-class-even="'chat-message right'" class="chat-message left">
                                                <img class="message-avatar" src="/Images/a1.jpg" alt="">
                                                <div class="message">
                                                    <a class="message-author" href="#"> Michael Smith </a>
                                                    <span class="message-date"> Mon Jan 26 2015 - 18:39:23 </span>
                                                    <span class="message-content" ng-bind="mobileComment.Comment"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    @*<div class="chat-message right">
                                        <img class="message-avatar" src="/Images/a4.jpg" alt="">
                                        <div class="message">
                                            <a class="message-author" href="#"> Karl Jordan </a>
                                            <span class="message-date">  Fri Jan 25 2015 - 11:12:36 </span>
                                            <span class="message-content">
                                                Many desktop publishing packages and web page editors now use Lorem Ipsum as their default model text, and a search for 'lorem ipsum' will uncover.
                                            </span>
                                        </div>
                                    </div>*@
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="chat-message-form">
                                    <div class="form-group">
                                        <textarea ng-model="model.mobileComment" class="form-control message-input" name="message" placeholder="Enter comment here..."></textarea>
                                        <button type="button" class="btn btn-warning btn-xs pull-right btn-comment" ng-click="model.createMobileComment(@Model.MobileId,model.mobileComment)">Comment</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

