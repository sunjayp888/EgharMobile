<div class="wrapper wrapper-content" ng-cloak>
    <div class="row" ng-controller="HomeBannerController as model" ng-init="model.retrieveHomeBannerImage()">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content-image">
                    <div class="carousel slide" id="banner">
                        <div class="carousel-inner carosel-home-height">
                            <div class="item" ng-class='{active: $first}' ng-repeat="homeBannerImage in model.homeBannerImages">
                                <img alt="image" class="img-responsive image-full-width" ng-src="{{homeBannerImage.RelativePath}}">
                            </div>
                        </div>
                        <a data-slide="prev" href="#banner" class="left carousel-control">
                            <span class="icon-prev"></span>
                        </a>
                        <a data-slide="next" href="#banner" class="right carousel-control">
                            <span class="icon-next"></span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (Request.Browser.IsMobileDevice)
    {
        @Html.Partial("_MobileView")
    }
    else
    {
        @Html.Partial("_DesktopView")
    }

</div>