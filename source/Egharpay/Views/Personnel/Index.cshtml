                                                <th>Actions</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            <tr ng-repeat="person in model.personnel" class="odd gradeX" ng-click="$event.originalEvent.ngClickHandled || model.viewPersonnelProfile(person.PersonnelId)">
                                                <td><span ng-cloak class="ng-cloak"><img class="avatar avatar-grid" ng-src="{{ person.Avatar.Url || '/Images/Avatar.png' }}" alt="Avatar" title="avatar"></span><br /></td>
