@using Egharpay.Helpers
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="google-site-verification" content="g1r2dd7w9aTw3CRto-8ZYFlvHVpYJtfbxjpeFRzxLSI" />
    <title>Mumbile | @ViewBag.Title</title>
    <!-- Add local styles, mostly for plugins css file -->
    @if (IsSectionDefined("Styles"))
    {@RenderSection("Styles", required: false)
    }

    <!-- Add jQuery Style direct - used for jQGrid plugin -->
    <link href="@Url.Content("~/Scripts/plugins/jquery-ui/jquery-ui.min.css")" rel="stylesheet" type="text/css"/>

    <!-- Primary Mumbile style -->
    @Styles.Render("~/font-awesome/Styles")
    @Styles.Render("~/Content/Styles")
    @Styles.Render("~/Content/plugins/iCheck/iCheckStyles")
    @Styles.Render("~/plugins/imagecropperStyles")
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/clockpickerStyles")


    @*@Styles.Render("~/Content/plugins/ionRangeSlider/ionRangeStyles")*@

</head>
<body class="top-navigation">

<!-- Skin configuration box -->
@*@Html.Partial("_SkinConfig")*@

<!-- Wrapper-->
<!-- PageClass give you ability to specify custom style for specific view based on action -->
<div id="wrapper" class="@Html.PageClass()" ng-app="Egharpay">

    <!-- Navigation -->
    @*@Html.Partial("_Navigation")*@

    <!-- Page wraper -->
    <div id="page-wrapper" class="gray-bg @ViewBag.SpecialClass">

        <!-- Top Navbar -->
        @Html.Partial("_TopNavbar2")
        
        <!-- Main view -->
        @RenderBody()
        <br/>
        <br/>
        <!-- Footer -->
        @Html.Partial("_Footer")


    </div>
    <!-- End page wrapper-->
    <!-- Right Sidebar -->
    @Html.Partial("_RightSidebar")

</div>


<!-- End wrapper-->
<!-- Section for main scripts render -->
@Scripts.Render("~/Scripts/bower")
@*@Scripts.Render("~/bundles/jquery")*@
@*@Scripts.Render("~/bundles/bootstrap")*@
@*@Scripts.Render("~/plugins/slimScroll")*@
@Scripts.Render("~/bundles/Mumbile")
@Scripts.Render("~/Scripts/Application")


@*@Scripts.Render("~/plugins/peity")*@
@Scripts.Render("~/plugins/iCheck")
@Scripts.Render("~/plugins/imagecropper")
@Scripts.Render("~/plugins/dataTables")
@Scripts.Render("~/plugins/clockpicker")


@*@Scripts.Render("~/plugins/ionRange")*@

<!-- Skin config script - only for demo purpose-->
@Scripts.Render("~/bundles/skinConfig")

@Scripts.Render("~/plugins/typehead")



<!-- Handler for local scripts -->
@RenderSection("scripts", required: false)
</body>
</html>

<script type="text/javascript">
    $(document).on('click',
        '.mega-dropdown',
        function (e) {
            e.stopPropagation();
        });

    $(document).ready(function () {

        $('.i-checks').iCheck({
            checkboxClass: 'icheckbox_square-green',
            radioClass: 'iradio_square-green'
        });

        $('.carousel').carousel({
            interval: 4000
        });
    });
</script>

