@using Microsoft.AspNet.Identity
<div id="right-sidebar" class="xs-mt-10">
    <div class="sidebar-container">

        <ul class="nav nav-tabs navs-3">
            <li class="active">
                <a data-toggle="tab" href="#tab-2">
                    <i class="fa fa-home"></i>
                </a>
            </li>
            <li class="">
                <a data-toggle="tab" href="#tab-3">
                    <i class="fa fa-gear"></i>
                </a>
            </li>


        </ul>

        <div class="tab-content">
            <div id="tab-2" class="tab-pane active">
                <div class="sidebar-title">
                    <h3><i class="fa fa-gears"></i> Store</h3>
                    <small><i class="fa fa-tim"></i> Browse in store.</small>
                </div>
                <div class="setings-item">
                    <span>
                        <a class="btn btn-danger" href="">Latest Phone</a>
                    </span>
                </div>
                <div class="setings-item">
                    <span>
                        <a class="btn btn-danger" href="">Brands</a>
                    </span>
                </div>
                <div class="setings-item anchor-black">
                    <span>
                        @if (User.Identity.IsAuthenticated)
                        {
                            using (Html.BeginForm("Logout", "Account", FormMethod.Post, new { id = "logoutForm" }))
                            {
                                @Html.AntiForgeryToken()

                                <a href="javascript:document.getElementById('logoutForm').submit()">
                                    <i class="fa fa-sign-out"></i> Log Off
                                </a>

                            }
                        }
                        else
                        {
                            <a href="@Url.Action("Login", "Account")">
                                <i class="fa fa-sign-in"></i> Login
                            </a>
                        }
                    </span>
                </div>


            </div>
            <div id="tab-3" class="tab-pane">
                <div class="sidebar-title">
                    <h3>
                        <i class="fa fa-gears"></i> Settings
                    </h3>
                    <small><i class="fa fa-tim"></i> You can change your account details.</small>
                </div>
                <div class="setings-item">
                    <span>
                        <img alt="image" src="/images/a6.jpg">
                    </span>
                </div>
                <div class="setings-item">
                    <span>
                        @User.Identity.GetUserName()
                    </span>
                </div>
                <div class="setings-item">
                    <span>
                        @Html.ActionLink("Edit Profile", "Profile", "Personnel", null, new { @class = "btn btn-danger" })
                    </span>
                </div>
                <div class="setings-item anchor-black">
                    <span>
                        @Html.ActionLink("Reset Password", "ResetPassword", "Account")
                    </span>
                </div>
                <div class="setings-item anchor-black">
                    <span>
                        @Html.ActionLink("My Orders", "ResetPassword", "Account")
                    </span>
                </div>
                <div class="sidebar-content">
                    <h4>Settings</h4>
                    <div class="small">
                        We belive that. Mumbile will give you a better experience of browsing in store.
                    </div>
                </div>
            </div>
        </div>

    </div>



</div>
