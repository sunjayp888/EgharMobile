@using Egharpay.Extensions
@{
    ViewBag.Title = "Trend";
}

<div ng-controller="TrendController as model" ng-init="model.initialise()">
    <div class="page-title">
        <div class="title_left">
            <h3>
                Trends <small></small>
            </h3>
        </div>
        <div class="row">
            @if (User.IsInAnyRoles("Admin"))
            {
                <div class="col-lg-12">
                    <a class="btn btn-primary btn-lg" href="@Url.Action("Create", "Trend")">
                        <i class="fa fa-user"></i> Create
                    </a>
                </div>
            }
        </div>
        <div class="ibox-content">
            <div class="row m-b-sm m-t-sm">
                <div class="col-md-12">
                    <div class="input-group">

                        <input type="text" placeholder="Search" class="input-sm form-control" ng-model="searchField" ng-keyup="$event.keyCode == 13 && model.searchTrend(searchField)"> <span class="input-group-btn">
                            <button type="button" class="btn btn-sm btn-primary" ng-click="model.searchTrend(searchField)"> Go!</button>
                        </span>
                    </div>
                </div>
                <div class="project-list">
                </div>
            </div>
            <div class="row m-b-sm m-t-sm">
                <div class="col-md-3 form-inline">
                    @Html.Partial("Pagination/_pageSize")
                </div>
                <div class="col-md-9 text-right">
                    @Html.Partial("Pagination/_pageInformation")
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <p class="text-muted font-13 m-b-30">
                        </p>
                        <div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                            <div class="row">
                                <div class="col-xs-12">
                                    <table wt-responsive-table class="table table-striped table-bordered jambo_table table-hover dataTable no-footer" role="grid" aria-describedby="datatable-fixed-header_info">
                                        <thead>
                                            <tr role="row">
                                                <th ng-click="model.order('Name')" ng-class="model.orderClass('Name')">Name</th>
                                                <th ng-click="model.order('Detail')" ng-class="model.orderClass('Detail')">Detail</th>
                                                <th ng-click="model.order('ShortDescription')" ng-class="model.orderClass('ShortDescription')">ShortDescription</th>
                                                <th ng-click="model.order('CreatedDateTime')" ng-class="model.orderClass('CreatedDateTime')">Created Date</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="trend in model.trends" class="odd gradeX" ng-click="$event.originalEvent.ngClickHandled || model.editTrend(trend.TrendId)">
                                                <td><span ng-bind="trend.Name"></span></td>
                                                <td><span ng-bind="trend.Detail"></span></td>
                                                <td><span ng-bind="trend.ShortDescription"></span></td>
                                                <td><span ng-bind="trend.CreatedDateTime"></span></td>
                                                <td>
                                                    <div class="btn-group pull-right">
                                                        <a class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown" aria-expanded="false" ng-click="$event.originalEvent.ngClickHandled = true">
                                                            <i class="fa fa-chevron-down"></i>
                                                        </a>
                                                        <ul class="dropdown-menu slidedown">
                                                            <li>
                                                                <a style="cursor: pointer;">
                                                                    Edit
                                                                </a>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            @Html.Partial("Pagination/_pagination")
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <label ng-bind="model.searchMessage"></label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

